#!/bin/sh

filename="grim-$(date '+%d-%m-%Y-%H-%M-%S')"
grim - | tee /home/johan/Pictures/Screenshots/$(echo $filename).png
magick convert /home/johan/Pictures/Screenshots/$(echo $filename).png -bordercolor '#96cdfb' -border 30 /tmp/screenshot-notification.png
notify-send -i /tmp/screenshot-notification.png "ï€¾  grim" "desktop screenshot saved"
rm -f /tmp/screenshot-notification.png
