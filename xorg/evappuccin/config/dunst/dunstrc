[colors]
	background = "#1e1e2e"
	foreground = "#f5e0dc"

[global]
    ### Display ###

    # Which monitor should the notifications be displayed on.
    monitor = 0

    follow = none

    ### Geometry ###
    width = 500
    height = 500

    # Position the notification in the top right corner
    origin = top-right

    # Offset from the origin
    offset = 10x68

    # Scale factor. It is auto-detected if value is 0.
    scale = 0

    indicate_hidden = yes
    shrink = no
    transparency = 0
    notification_height = 5
    separator_height = 1
    padding = 24
    horizontal_padding = 24
    frame_width = 1
    outer_frame_width = 10

    frame_color = "#f5e0dc"
    outer_frame_color = "#f5e0dc"
    separator_color = "#89b4fa"
    sort = yes
    idle_threshold = 120

    ### Text ###
    font = JetBrains Mono Nerd Font 16
    line_height = 1

    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%s </b>\n%b"
    alignment = right
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = false
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = left
    max_icon_size = 150
    icon_path = .icons/flattrcolor/status/24:.icons/flattrcolor/devices/48:.icons/flattrcolor/apps/scalable:.icons/flattrcolor/actions/scalable

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/rofi -show run
    browser = /usr/bin/firefox
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    force_xinerama = false

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    context = ctrl+shift+period

[urgency_low]
    background =  "#1e1e2e"
    frame_color = "#f5e0dc"
    timeout = 5

[urgency_normal]
    background =  "#1e1e2e"
    frame_color = "#f5e0dc"
    timeout = 10

[urgency_critical]
    background = "#1e1e2e"
    frame_color = "#f38ba8"
    timeout = 0
